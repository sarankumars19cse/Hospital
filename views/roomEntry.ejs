</head>
<body class="adminBod">
    <div>
      <nav class="navbar fixed-top navbar-expand-lg navbar-dark" style="background-color: rgb(24, 24, 95);">
        <a class="navbar-brand" href="#" style="font-family: 'Spartan', sans-serif;"><i class="fas fa-hospital"></i> KARUR  HEALTH CARE </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2" href="/">HOME</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2 active" href="/ambulanceDet">AMBULANCE DETAILS</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2 active" href="/roomEntry">ROOM ENTRY</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2" href="/admin">ADMISSION DETAILS</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2" href="/logout">LOGOUT</a>
            </li>
          </ul>
        </div>
      </nav>
      <a href="/adminRoom"><button class="btn btn-lg btn-outline-light float-right mr-4 admissButton"><i class="fas fa-bars"></i> View Room Details</button></a>
      <div class="admiss">
          <% if(mes == "found") { %>
            <div class="popup" id="popupmsgSus">
              <button type="button" class="btn btn-danger btn-block message_btn" onclick="messageHide()">
          <div class="text-right">
              <i class="far fa-times-circle text-light float-right"></i>
          </div>
          Room Engaged Select another Room
      </button>
          </div>
          <% } else if(mes == "sucess") {%>
            <div class="popup" id="popupmsgSus">
              <button type="button" class="btn btn-success btn-block message_btn" onclick="messageHide()">
          <div class="text-right">
              <i class="far fa-times-circle text-light float-right"></i>
          </div>
          Successfully Registered!
      </button>
          </div>
          <% } else if(mes == "filled") { %>
            <div class="popup" id="popupmsgSus">
              <button type="button" class="btn btn-danger btn-block message_btn" onclick="messageHide()">
          <div class="text-right">
              <i class="far fa-times-circle text-light float-right"></i>
          </div>
          No More rooms Available
      </button>
          </div>
          <% } %>
        <h2 style="text-align: center;">ROOM ENTRY</h2>
        <form action="/roomEntry" method="POST">
          <input type="number" placeholder="Room No." class="form-control mt-5" name="roomNo" min="1" max="10">
          <input required type="date" placeholder="Admission Date" class="form-control mt-4" name="admissDate">
          <input required type="text" placeholder="Patient name" class="form-control mt-4" name="patientName">
          <input required type="number" placeholder="Age" class="form-control mt-4" name="age">
          <input required type="text" class="form-control mt-4" placeholder="Place" name="place">
          <input required type="text" placeholder="Attender Name" class="form-control mt-4" name="attenderName">
          <button type="submit" class="btn btn-primary btn-lg btn-block mt-4">REGISTER</button>
        </form>
      </div>
      <button type="button" class="btn btn-dark-green btn-lg float-lg-right mr-4" data-toggle="modal" data-target="#modalPoll-1"><b>Check Availability</b></button>
      </div>
      
      <!-- Modal: modalPoll -->
      <div class="modal fade right" id="modalPoll-1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true" data-backdrop="false">
        <div class="modal-dialog modal-full-height modal-right modal-notify modal-info" role="document">
          <div class="modal-content">
            <!--Header-->
            <div class="modal-header">
              <p class="heading lead">Room Availability
              </p>
      
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true" class="white-text">Ã—</span>
              </button>
            </div>
      
            <!--Body-->
            <div class="modal-body">
              <div class="text-center">
                <i class="far fa-file-alt fa-4x mb-3 animated rotateIn"></i>
                <p>
                  <strong>There are almost 10 rooms are there</strong>
                </p>
              </div>
      
              <hr>
              <div class="text-center mb-3"><strong>NOTE:</strong></div>
              <div class="row">
                <div class="col-6">
                  <div style="background-color: red;padding: 10%;" class="room"></div>
                </div>
                <div class="col-6 mt-1" style="font-size: 120%;">
                  <strong> => Engaged </strong>
                </div>
                <div class="col-6 mt-3">
                  <div style="background-color: green;padding: 10%;" class="room"></div>
                </div>
                <div class="col-6 mt-3" style="font-size: 120%;">
                  <strong> => Available </strong>
                </div>
            </div>

            <hr>
              <!-- Radio -->
              <p class="text-center">
                <strong>Rooms</strong>
              </p>

              <!-- Rooms -->

              <div class="row mb-5">
                <% for(var i=1 ; i<=10 ; i++) {%>
                  <% var c =0; %>
                  <% for(var j=0 ; j< found.length ; j++) {%>
                    <% if(i == found[j]) {%>
                      <div class="col-6 mt-3">
                        <div class="room" style="background-color: red;color: white;">
                          <%= i %>
                        </div>
                      </div>
                      <% c=1 %>
                      <% break %>
                    <% } %>
                  <% } %>
                  <% if(c==0) {%>
                    <div class="col-6 mt-3">
                      <div class="room" style="background-color: green;color: white;">
                        <%= i %>
                      </div>
                    </div>
                    <% } %>
                <% } %>
              </div>
              <hr>
          </div>
        </div>
      </div>
      <!-- Modal: modalPoll -->
    <script>
      function messageHide(){
          $(".popup").addClass("hide");
      }
    </script>
</body>
</html>