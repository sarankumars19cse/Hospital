    <link rel="stylesheet" href="css/styles.css">
    
    <!-- BootStrap Script links -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

    <!-- fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Spartan:wght@200&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Satisfy&family=Spartan:wght@200&display=swap" rel="stylesheet">

    <!-- icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://kit.fontawesome.com/8bbe7ed51b.js" crossorigin="anonymous"></script>
    
</head>
<body class="admissBody">
    <div class="medic-back">
      <nav class="navbar fixed-top navbar-expand-lg navbar-dark" style="background-color: rgb(24, 24, 95);">
        <a class="navbar-brand" href="#" style="font-family: 'Spartan', sans-serif;"><i class="fas fa-hospital"></i> KARUR  HEALTH CARE </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2" href="/">HOME</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2 active" href="/admission">ADMISSION</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2" href="/ambulance">AMBULANCE</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2" href="/admin">ADMIN</a>
            </li>
          </ul>
        </div>
      </nav>
      <a href="/admissionDet"><button class="btn btn-lg btn-outline-light float-right mr-4 admissButton"><i class="fas fa-bars"></i> View Admission Details</button></a>
      <div class="admiss">
        <% if(mes == "Success") { %>
        <div class="popup" id="popupmsgSus">
          <button type="button" class="btn btn-success btn-block message_btn" onclick="messageHide()">
      <div class="text-right">
          <i class="far fa-times-circle text-light float-right"></i>
      </div>
      Successfully Registered!
  </button>
      </div>
      <% } %>
        <h2 style="text-align: center;">ADMISSION</h2>
        <h5 style="text-align: center;">REGISTER TO BOOK YOUR ADMISSION</h5>
        <form action="/admission" method="POST">
          <input type="text" placeholder="Admission No." class="form-control mt-3" value="Admission No : <%= admissNo+1 %>" readonly>
          <input required type="text" placeholder="Patient name" class="form-control mt-3" name="patientName">
          <input required type="number" placeholder="Age" class="form-control mt-3" name="age">
          <input required type="date" placeholder="Date of Birth" class="form-control mt-3" name="dob">
          <textarea required rows="3" class="form-control mt-3" placeholder="Address" name="address"></textarea>
          <input required type="text" class="form-control mt-3" placeholder="Purpose of Admission" name="purpose">
          <input required type="text" placeholder="Attender Name" class="form-control mt-3" name="attenderName">
          <button type="submit" class="btn btn-primary btn-lg btn-block mt-3">REGISTER</button>
        </form>
      </div>
    </div>
    <script>
      function messageHide(){
          $(".popup").addClass("hide");
      }
    </script>
</body>
</html>