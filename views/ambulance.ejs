    <script src="https://kit.fontawesome.com/8bbe7ed51b.js" crossorigin="anonymous"></script>
    
</head>
<body class="bod">
    <div class="ambu-back">
      <nav class="navbar fixed-top navbar-expand-lg navbar-dark" style="background-color: rgb(24, 24, 95);">
        <a class="navbar-brand" href="#" style="font-family: 'Spartan', sans-serif;"><i class="fas fa-hospital"></i> KARUR  HEALTH CARE </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2" href="/">HOME</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2" href="/admission">ADMISSION</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2 active" href="/ambulance">AMBULANCE</a>
            </li>
            <li class="nav-item">
              <a class="nav-link mr-3 ml-2" href="/admin">ADMIN</a>
            </li>
          </ul>
        </div>
      </nav>
      <div class="ambu">
        <% if(mes == "Success") { %>
          <div class="popup" id="popupmsgSus">
            <button type="button" class="btn btn-success btn-block message_btn" onclick="messageHide()">
        <div class="text-right">
            <i class="far fa-times-circle text-light float-right"></i>
        </div>
        Successfully Registered!
    </button>
        </div>
        <% } %>
        <h3>AMBULANCE SERVICE IS AVAILABLE HERE TO MIGRATE HOSPITALS</h3>
        <form action="/ambulance" method="post">
          <p>PATIENT NAME : <input required type="text" placeholder="Patient Name" class="form-control mt-3" name="patientName"></p>
          <p>FROM: <input type="text" class="form-control" value="KARUR HEALTH CARE" readonly name="from"></p>
          <P>DESTINATION : <input type="text" placeholder="Enter the hospital name for destination" required name="to" class="form-control"></P>
          <p>Enter the date When did you need this service : <input type="date" class="form-control" required name="time"></p>
          <p>ATTENDERS ALLOWED WITH PATIENT : <input type="number" value="1" readonly class="form-control" required name="attenders"></p>
          <p>ATTENDER NAME : <input required type="text" placeholder="Attender Name" class="form-control mt-3" name="attenderName"></p>
          <button type="submit" class="btn btn-primary btn-lg btn-block" style="margin-top: 3%;">BOOK NOW</button>
        </form>
      </div>
    </div>
    <script>
      function messageHide(){
          $(".popup").addClass("hide");
      }
    </script>
</body>
</html>