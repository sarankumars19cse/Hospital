</head>
<body class="adminBod">
  <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: rgb(24, 24, 95);">
    <a class="navbar-brand" href="#" style="font-family: 'Spartan', sans-serif;"><i class="fas fa-hospital"></i> KARUR  HEALTH CARE </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a class="nav-link mr-3 ml-2" href="/">HOME</a>
        </li>
        <li class="nav-item">
          <a class="nav-link mr-3 ml-2" href="/admission">ADMISSION</a>
        </li>
        <li class="nav-item">
          <a class="nav-link mr-3 ml-2" href="/ambulance">AMBULANCE</a>
        </li>
        <li class="nav-item">
          <a class="nav-link mr-3 ml-2 active" href="/admin">ADMIN</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="text-center" style="margin-top: 5%;">
    <button class="btn btn-lg mr-4 pl-5 pr-5 signbtn signb" id="up" onclick="signup()">SignUp</button>
    <button class="btn btn-lg ml-4 pl-5 pr-5 signbtn" id="in" onclick="signin()">SignIn</button>
  </div>
  <div class="sign-up" style="text-align: center;" id="signup">
    <h3 style="color: aliceblue;font-family: 'Gideon Roman', cursive;" class="mb-3">SIGN UP</h3>
    <% if(mes == "taken") { %>
      <div class="popup mb-2" id="popupmsgSus">
        <button type="button" class="btn btn-danger btn-block message_btn" onclick="messageHide()">
    <div class="text-right">
        <i class="far fa-times-circle text-light float-right"></i>
    </div>
    Username Already taken!!
  </button>
    </div>
    <% } %>
          <form action="/signup" method="POST">
            <input required type="text" class="form-control" placeholder="Username" name="user">
            <input required type="password" class="form-control" placeholder="Password" name="pass">
            <input required type="email" placeholder="Email" class="form-control" name="mail">
            <button type="submit" class="btn btn-primary btn-lg btn-block" style="margin-top: 2.5%;">signup</button>
            <div class="mt-4 text-center" style="background-color: rgba(240, 248, 255, 0.637);margin:0% 5% 0% 5%;border-radius: 5px;">
              Already have an account? <a onclick="signin()" style="color: rgb(87, 87, 253);cursor: pointer;">Login</a>
          </div>
         </form>   
  </div>
  <div class="sign-up hide" style="text-align: center;" id="signin">
    <h3 style="color: aliceblue;font-family: 'Gideon Roman', cursive;" class="mb-3">SIGN IN</h3>
    <% if(mes == "username") { %>
      <div class="popup mb-2" id="popupmsgSus">
        <button type="button" class="btn btn-danger btn-block message_btn" onclick="messageHide()">
    <div class="text-right">
        <i class="far fa-times-circle text-light float-right"></i>
    </div>
    Incorrect Username!!
  </button>
    </div>
    <% } else if(mes == "password"){%>
      <div class="popup mb-2" id="popupmsgSus">
        <button type="button" class="btn btn-danger btn-block message_btn" onclick="messageHide()">
    <div class="text-right">
        <i class="far fa-times-circle text-light float-right"></i>
    </div>
    Incorrect Password!!
  </button>
    </div>
    <% } %>
    <form action="/signin" method="POST">
    <input required type="text" class="form-control" placeholder="Username" name="user">
    <input required type="password" class="form-control" placeholder="Password" name="pass">
    <button type="submit" class="btn btn-primary btn-lg btn-block" style="margin-top: 2%;">signin</button>
    <div class="mt-4 text-center" style="background-color: rgba(240, 248, 255, 0.637);margin:0% 5% 0% 5%;border-radius: 5px;">
      Don't have an account? <a onclick="signup()" style="color: blue;cursor: pointer;">Create One</a>
  </div>
  </form>  
</div>
<script>
  function signup()
  {
    document.getElementById("signup").classList.remove("hide");
    document.getElementById("signin").classList.add("hide");
    document.getElementById("up").classList.add("signb");
    document.getElementById("in").classList.remove("signb");
  }
  function signin()
  {
    document.getElementById("signup").classList.add("hide");
    document.getElementById("signin").classList.remove("hide");
    document.getElementById("up").classList.remove("signb");
    document.getElementById("in").classList.add("signb");
  }
  function messageHide(){
    $(".popup").addClass("hide");
  }
</script>
</body>
</html>