  <!-- <a href="/ambulanceDet"><button class="btn btn-lg btn-primary float-right mr-4 mt-4"><i class="fas fa-bars"></i> View Ambulance Details</button></a> -->
  <h2 class="cont1-head admiss-head" style="padding-top: 3%;color: white;">Room Details</h2>
  <hr>
  <% if(NoOfEntries > 0) { %>
  <div class="container">
      <div class="row">
        <% found.forEach((val) => { %>
        <div class="col-lg-6 col-sm-12 mt-3 mb-5">
            <div class="patient">
              <form action="/deleteRoom" method="post">
                <input type="hidden" name="id" value="<%= val.roomNo %>">
                <h3 class="text-center p-3">Room no : <%= no %> <button type="button" class="btn float-right" data-toggle="modal" data-target="#modalConfirmDelete" style="background:none;color: white;"><i class="fa-solid fa-2x fa-trash-can"></i></button></h3>
                <!--Modal: modalConfirmDelete-->
                  <div class="modal fade" id="modalConfirmDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                  aria-hidden="true">
                  <div class="modal-dialog modal-sm modal-notify modal-danger" role="document">
                    <!--Content-->
                    <div class="modal-content text-center dltMod">
                      <!--Header-->
                      <div class="modal-header d-flex justify-content-center bg-danger">
                        <p class="heading pt-2 pb-2" style="color: white;font-size: 140%;"><b>Are you sure You want to delete?</b></p>
                      </div>

                      <!--Body-->
                      <div class="modal-body mt-2 mb-2"> 

                        <i class="fas fa-times fa-5x animate__animated animate__rotateIn" style="color: red;"></i>

                      </div>

                      <!--Footer-->
                      <div class="modal-footer flex-center mt-2 mb-2 yesNo">
                        <!-- <a href="" class="btn  btn-outline-danger">Yes</a> -->
                        <button class="btn btn-outline-danger btn-lg yes" type="submit">Yes</button> 
                        <a type="button" class="btn btn-danger waves-effect btn-lg no ml-lg-5" style="color: white;" data-dismiss="modal">No</a>
                      </div>
                    </div>
                    <!--/.Content-->
                  </div>
                  </div>
                  <!--Modal: modalConfirmDelete-->
                </form>
                <div class="ml-5 det">
                  <form action="/room_det" method="post">
                  <input type="hidden" name="admiss_no" value="<%= no++ %>">
                    <div> Name : <%= val.name %></div>
                    <div> Age : <%= val.age %></div>
                    <div> place : <%= val.place %></div>
                    <div> Attender Name : <%= val.attenderName %></div>
                    <div class="text-center"><button type="submit" class="btn btn-success">View Full Details</button></div>
                  </form>
                </div>    
            </div>
        </div>
        <% }) %>
      </div>
  </div>
  <% } else { %>
    <div style="color: white;margin-top: 8%;" class="text-center">
      <div><i class="fa-solid fa-folder-open" style="font-size: 700%;"></i></div>
      <div class="mt-3 fa-2x"><span> NO DETAILS FOUND </span></div>
    </div>  
    <% } %>  
  <script>
    function delet(){
       alert("Deleted Sucessfully!!");
    }
  </script>
 </body>
